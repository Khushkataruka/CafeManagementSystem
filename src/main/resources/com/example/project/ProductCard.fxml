<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="275.0" prefWidth="286.0" style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.ProductCardController">
   <children>
      <ImageView fx:id="productImage" fitHeight="172.0" fitWidth="286.0" layoutX="2.0" layoutY="57.0" pickOnBounds="true">
         <image>
            <Image url="@../../../Images/PanCake.jpg" />
         </image>
      </ImageView>
      <Spinner fx:id="quantityInput" editable="true" layoutX="16.0" layoutY="239.0" prefHeight="26.0" prefWidth="196.0" />
      <Button fx:id="buyButton" layoutX="226.0" layoutY="236.0" mnemonicParsing="false" text="Buy">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label fx:id="nameLabel" layoutX="16.0" layoutY="14.0" prefHeight="30.0" prefWidth="158.0" text="PanCake">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="priceLabel" layoutX="232.0" layoutY="14.0" prefHeight="30.0" prefWidth="54.0" text="120rs">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button layoutX="174.0" layoutY="8.0" mnemonicParsing="false" onAction="#addToCart" prefHeight="42.0" prefWidth="47.0">
         <graphic>
            <ImageView fitHeight="32.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Images/Products.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
